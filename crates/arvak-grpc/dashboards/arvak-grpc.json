{
  "dashboard": {
    "title": "Arvak gRPC Service",
    "tags": ["arvak", "grpc", "quantum"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Job Submission Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(arvak_jobs_submitted_total[5m])",
            "legendFormat": "{{backend_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Jobs/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Active & Queued Jobs",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "arvak_active_jobs",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "arvak_queued_jobs",
            "legendFormat": "Queued",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Jobs"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Job Completion Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(arvak_jobs_completed_total[5m])",
            "legendFormat": "{{backend_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Jobs/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Job Failure Rate",
        "type": "graph",
        "gridPos": {"x": 8, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(arvak_jobs_failed_total[5m])",
            "legendFormat": "{{backend_id}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Failures/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Job Success Rate",
        "type": "stat",
        "gridPos": {"x": 16, "y": 8, "w": 8, "h": 8},
        "targets": [
          {
            "expr": "rate(arvak_jobs_completed_total[5m]) / (rate(arvak_jobs_completed_total[5m]) + rate(arvak_jobs_failed_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Job Duration (P95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(arvak_job_duration_milliseconds_bucket[5m]))",
            "legendFormat": "{{backend_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "Queue Time (P95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(arvak_job_queue_time_milliseconds_bucket[5m]))",
            "legendFormat": "{{backend_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Queue Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "RPC Duration by Method",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(arvak_rpc_duration_milliseconds_bucket[5m]))",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Backend Availability",
        "type": "stat",
        "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "arvak_backend_available",
            "legendFormat": "{{backend_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "0", "text": "Unavailable"},
              {"type": "value", "value": "1", "text": "Available"}
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      }
    ]
  }
}
